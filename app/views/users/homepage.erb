<div class="container">
  <h3><%= @user.username %>'s profile</h3>
  <img src ="<%= avatar_url(@user.email) %>">


  <p><%= @user.first_name %> <%= @user.last_name %></p>
  <p><%= @user.about %></p>
  <p><%= @user.location %></p>
  <a href="/">Home</a>
  <% if logged_in? && page_owner? %>
    <a href="/users/<%=@user.id%>/followers">Followers</a>
    <a href="/users/<%=@user.id%>/following">Following</a>
    <a href="/users/<%=@user.id%>/edit">Edit profile</a>
    <a href="/logout">Log out</a>
  <% end %>

</div>
<% if logged_in? && page_owner? %>
  <a href="/users/<%= @user.id %>/tweets/new">Create new tweet</a>
<% end %>

<% if !@user_tweets.nil? %>
 <h2><%= @user.username %>'s tweets</h2>
  <% @user_tweets.each do |tweet| %>
    <p><%= tweet.content %></p>
    <% if logged_in? && page_owner? %>
      <a href="/users/<%= @user.id %>/tweets/<%= tweet.id %>/delete"><input type="submit" value="Delete"></a>
    <% end %>
  <% end %>
<% end %>
